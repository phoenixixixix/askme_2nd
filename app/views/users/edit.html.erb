<div class="container content-wrapper buffer-both">
  <h1 class="title-medium">Правка профілю</h1>

  <div class="column-1-2">
    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div class="form-errors">
          <ul>
            <% for message in @user.errors.full_messages %>
              <li class="form-error-message"><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-field">
        <%= f.label :username, class: 'form-label' %>
        <%= f.text_field :username, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label 'Ваше ім\'я', class: 'form-label' %>
        <%= f.text_field :name, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label 'URL вашої аватарки', class: 'form-label' %>
        <%= f.text_field :avatar_url, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label 'Колір задньго фону', class: 'form-label' %>
        <%= f.color_field :prof_bg_color, class: 'form-color-field' %>
      </div>

      <div class="buffer-top-large buffer-bottom">
        Якщо не хочете міняти пароль - залиште ці поля порожніми!
      </div>

      <div class="form-field">
        <%= f.label :password, class: 'form-label' %>
        <%= f.password_field :password, class: 'form-text-field' %>
      </div>

      <div class="form-field">
        <%= f.label :password_confirmation, class: 'form-label' %>
        <%= f.password_field :password_confirmation, class: 'form-text-field' %>
      </div>

      <div class="form-action buffer-top column-1-2">
        <%= f.submit 'Зберегти', class: 'button button-dark button-small' %>
      </div>

      <div class="form-action buffer-top column-1-2">
        <%= link_to 'Видалити профіль', user_path(@user),
                    method: :delete, data: {confirm: 'підтвердження видалення'},
                    class: 'button button-small button-delete button-link float-right' %>
      </div>
    <% end %>
  </div>
</div>